<h1>Listing trials</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Published</th>
    <th>Published datetime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trials.each do |trial| %>
  <tr>
    <td><%= trial.user_id %></td>
    <td><%= trial.title %></td>
    <td><%= trial.published %></td>
    <td><%= trial.published_datetime %></td>
    <td><%= link_to 'Show', trial %></td>
    <td><%= link_to 'Edit', edit_trial_path(trial) %></td>
    <td><%= link_to 'Destroy', trial, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

